@model progetto_settimanaleS18L5.Models.Prenotazione

@{
    ViewBag.Title = "Dettagli Prenotazione";
}

<h2>Dettagli Prenotazione</h2>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">Codice Fiscale</dt>
        <dd class="col-sm-10">@Model.CodiceFiscale</dd>

        <dt class="col-sm-2">Data Prenotazione</dt>
        <dd class="col-sm-10">@Model.DataPrenotazione.ToShortDateString()</dd>

        <dt class="col-sm-2">Numero Camera</dt>
        <dd class="col-sm-10">@Model.NumeroCamera</dd>

        <dt class="col-sm-2">Data Inizio Soggiorno</dt>
        <dd class="col-sm-10">@Model.DataInizioSoggiorno.ToShortDateString()</dd>

        <dt class="col-sm-2">Data Fine Soggiorno</dt>
        <dd class="col-sm-10">@Model.DataFineSoggiorno.ToShortDateString()</dd>

        <dt class="col-sm-2">Anno</dt>
        <dd class="col-sm-10">@Model.Anno</dd>

        <dt class="col-sm-2">Caparra Confirmatoria</dt>
        <dd class="col-sm-10">@Model.CaparraConfirmatoria</dd>

        <dt class="col-sm-2">Importo Totale</dt>
        <dd class="col-sm-10">@Model.TariffaApplicata</dd>

        <dt class="col-sm-2">Mezza Pensione</dt>
        <dd class="col-sm-10">@(Model.MezzaPensione ? "Si" : "No")</dd>

        <dt class="col-sm-2">Pensione Completa</dt>
        <dd class="col-sm-10">@(Model.PensioneCompleta ? "Si" : "No")</dd>

        <dt class="col-sm-2">Prima Colazione</dt>
        <dd class="col-sm-10">@(Model.PernottamentoPrimaColazione ? "Si" : "No")</dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Servizi Aggiuntivi", "VisualizzaServiziAggiuntivi", "Prenotazione", new { id = Model.IdPrenotazione }, new { @class = "btn btn-outline-secondary" })
    @Html.ActionLink("Aggiungi Servizio", "AggiungiServizioAggiuntivo", "Prenotazione", new { id = Model.IdPrenotazione }, new { @class = "btn btn-outline-success" })
    @Html.ActionLink("CheckOut", "CheckOut", "Prenotazione", new { id = Model.IdPrenotazione }, new { @class = "btn btn-outline-primary" })
    @using (Html.BeginForm("EliminaPrenotazione", "Prenotazione", FormMethod.Post))
    {
        @Html.Hidden("IdPrenotazione", Model.IdPrenotazione)
        <button type="submit" class="btn btn-outline-danger">Elimina Prenotazione</button>
    }
</div>



